@model D3Dashboard.Web.Models.DashboardViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>D3.js Interactive Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <style>
        body {
            background-color: #f4f7fc;
            font-family: 'Arial', sans-serif;
        }
        .dashboard-container {
            max-width: 1100px;
            margin: auto;
        }
        .dashboard-title {
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .card-custom {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            transition: 0.3s;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        #chart-container {
            background: #ffffff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

    <div class="container mt-5 dashboard-container">
        <h2 class="text-center dashboard-title">📊 Interactive D3.js Dashboard</h2>

        <div class="row">
            <!-- Filters Section -->
            <div class="col-md-3">
                <div class="card card-custom">
                    <h4 class="text-center mb-3">🔍 Filters</h4>

                    <label><strong>Start Date</strong></label>
                    <input type="date" id="startDate" class="form-control mb-2" />

                    <label><strong>End Date</strong></label>
                    <input type="date" id="endDate" class="form-control mb-2" max="" />

                    <label><strong>Category</strong></label>
                    <select id="categoryFilter" class="form-control mb-3">
                        <option value="">All Categories</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category">@category</option>
                        }
                    </select>

                    <button id="applyFilter" class="btn btn-primary w-100">Apply Filter</button>
                </div>
            </div>

            <!-- Chart Section -->
            <div class="col-md-9">
                <div id="chart-container">
                    <h4 class="text-center">📈 Data Visualization</h4>
                    <svg id="chart" width="100%" height="400"></svg>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/dashboard.js"></script>

</body>
</html>
